<table class="table table-hover caption-top mt-3">
  <caption class="mx-2">
    <h1 class="mx-2 float-start">List of Author</h1>
    <a class="btn btn-success float-end" href="/author/create">Create</a>
  </caption>
    <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Image</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% 
          let i = 1;
          for(const author of authors){ 
        %>
          <tr>

          <th scope="row"><%= i %></th>
          <td><%= author.name %></td>
          <td><img src="<%= author.image %>" class="img-thumbnail" width="80"></td>
          <td><a href="<%= '/author/delete/'+author._id %>" class="btn btn-danger">Delete</a></td>
        </tr>
        <% 
            i++; 
          } 
        %>

    </tbody>    
</table>