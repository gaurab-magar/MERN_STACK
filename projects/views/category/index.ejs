<table class="table table-hover caption-top mt-3">
    <caption class="mx-2">
      <h1 class="mx-2 float-start">List of category</h1>
      <a class="btn btn-success float-end" href="/category/create">Create</a>
    </caption>
      <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
           
          </tr>
        </thead>
        <tbody>
          <% 
            let i = 1;
            for(const category of categories){ 
          %>
            <tr>
  
            <th scope="row"><%= i %></th>
            <td><%= category.name %></td>
            <td><a href="<%= '/category/delete/'+category._id %>" class="btn btn-danger">Delete</a></td>
          </tr>
          <% 
              i++; 
            } 
          %>
  
      </tbody>    
  </table>